<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %5p [%-17t :: %-35c{35}] %m%n</pattern>
    </encoder>
  </appender>

  <logger name="com.github.triceo.splitlog">
    <level value="TRACE" />
    <appender-ref ref="consoleAppender" />
  </logger>
</configuration>
